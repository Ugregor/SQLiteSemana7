<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite.Modificar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar Usuario"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="TxtUsu" Placeholder="Ingrese el ususario"/>
            <Entry x:Name="TxtPass" Placeholder="Ingrese la password"/>
            <Entry x:Name="TxtNom" Placeholder="Ingrese el nombre"/>
            <Button x:Name="BtnActualizar" Text="Actualizar" Clicked="BtnActualizar_Clicked"/>
            <Button x:Name="BtnEliminar" Text="Eliminar" Clicked="BtnEliminar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>