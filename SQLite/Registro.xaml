<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Regsitro Usuarios"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="TxtUsu" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="TxtPass" Placeholder="Ingrese la password"/>
            <Entry x:Name="TxtNom" Placeholder="Ingrese el nombre"/>
            <Button x:Name="BtnRegistrar" Text="Registrar" Clicked="BtnRegistrar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>